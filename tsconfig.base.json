{
  "compilerOptions": {
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsxImportSource": "solid-js",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "strict": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
